<h1 align="center" id="title">Login</h1>
<div class = 'row'>
<%= form_for(:session, url:login_path, :html => {:class => "form-horizontal", role: "form", id: "text"}) do |f| %>
<div class="form-group">
    <div class="col-md-5 control-label">
        <%= f.label :email %>
    </div>
    <div class="col-xs-2">
        <%= f.email_field :email, id: "password_colour", placeholder: "Enter your email" %>
    </div>
</div>  
<div class="form-group">
    <div class="col-md-5 control-label">
        <%= f.label :password%>
    </div>
    <div class="col-xs-2">
        <%= f.password_field :password, id:"password_colour", placeholder: "Enter your password" %>
    </div>
</div>
<div class="form-group">
    <div class="col-md-6 control-label">
        <%= f.submit 'Login', class:"btn btn-primary btn-lg"%>
        </div>
    </div>
</div>        
<%end%>
<p id="alert" class="text-danger"><%= alert%></p>
<div align="center">
<p id="text">New to Grabber?</p>
<%= link_to "Sign up", signup_path, class: "btn btn-default btn-sm" %>
</div>