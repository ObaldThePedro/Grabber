<!DOCTYPE html>
<html>
  <head>
    <title>Grabber</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<% if logged_in? %>
Logged in as <%= current_user.first_name + " " + current_user.last_name %>.
<%= link_to "Log Out", logout_path %>
<%= link_to "My bookings", my_bookings_path%>
<%= link_to "Booking history", bookings_history_path%>
<%= link_to "My items", my_items_path%>
<%= link_to "Homepage", welcome_path(session[:user_id])%>
<% end %>
<% if flash[:errors] %>
<div class="errors">
  <% flash[:errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
</div>
  <% end %>
    <%= yield %>
  </body>
</html>
