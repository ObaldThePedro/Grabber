<h1><%= @review.booking_id %></h1>

<div class='row' >
<%= form_for(@review, :html => {:class => "form-horizontal", role: "form"}) do |f|%>

<div class="form-group">
    <div class="col-md-5 control-label">
      <%= f.label :description, id:"text"%>
    </div>
    <div class="col-xs-4"> 
      <%= f.text_area :description, rows:15, class:"form-control" %>
    </div>
</div>
<div class="form-group">
    <div class="col-md-9 control-label">
      <%=  f.submit class: "btn btn-primary btn-lg"%>
    </div>
</div>
<%= f.hidden_field :booking_id, value: params[:booking_id]%>
<%= f.hidden_field :user_id, value: session[:user_id]%>
<%= f.hidden_field :item_id, value: params[:item_id]%>
<%end%>